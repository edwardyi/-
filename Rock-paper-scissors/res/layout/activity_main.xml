<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edwardyi.rock_paper_scissors.MainActivity" >
	
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/game_title" />

	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <ImageView
	        android:id="@+id/player1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/ic_launcher" />

	    <RadioGroup
	        android:id="@+id/group1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingLeft="30dp" >

	        <RadioButton android:id="@+id/opt1_paper"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/paper"/>
	         <RadioButton android:id="@+id/opt1_scissor"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/scissor"/>
	          <RadioButton android:id="@+id/opt1_rock"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/rock"/>
	    </RadioGroup>
	     <ImageView android:id="@+id/player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher"/>

	    <RadioGroup
	        android:id="@+id/group2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingLeft="30dp" >

	        <RadioButton android:id="@+id/opt2_paper"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/paper"/>
	         <RadioButton android:id="@+id/opt2_scissor"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/scissor"/>
	          <RadioButton android:id="@+id/opt2_rock"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/rock"/>
	    </RadioGroup>
	</LinearLayout>
    <Button android:id="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_play"/>
    <TextView android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/txt_result"
	   />
	

</LinearLayout>
